{
  "name": "redux-features",
  "version": "0.0.0-development",
  "description": "powerful feature-oriented programming for redux",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint src test",
    "lint:fix": "eslint --fix src test",
    "lint:watch": "esw --watch src test",
    "flow": "flow",
    "flow:coverage": "for file in src/**.js test/**.js; do echo $file; flow coverage $file; done",
    "flow:watch": "flow-watch -e js,js.flow,flowconfig --ignore lib/ --ignore node_modules/ --watch .flowconfig --watch src/ --watch test/",
    "gen-flow-files": "flow gen-flow-files src/ --out-dir lib",
    "copy-flow-files": "cd src; copy *.js.flow **/*.js.flow ../lib",
    "build": "rimraf lib && babel src --out-dir lib",
    "test": "NODE_ENV=production BABEL_ENV=test nyc --reporter=lcov --reporter=text mocha $npm_package_config_mocha",
    "commitmsg": "validate-commit-msg",
    "precommit": "npm run lint && flow",
    "prepush": "npm test",
    "prepublish": "npm run lint && flow && npm test && npm run build && npm run copy-flow-files",
    "open:coverage": "open coverage/lcov-report/index.html",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "config": {
    "mocha": "--compilers js:babel-core/register ./test/*Test.js",
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jcoreio/redux-features.git"
  },
  "keywords": [
    "redux",
    "features",
    "feature-oriented programming",
    "fop",
    "plugins",
    "code splitting"
  ],
  "author": "Andy Edwards",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jcoreio/redux-features/issues"
  },
  "homepage": "https://github.com/jcoreio/redux-features#readme",
  "devDependencies": {
    "@jedwards1211/eslint-config": "^1.0.0",
    "@jedwards1211/eslint-config-flow": "^1.0.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-transform-flow-comments": "^6.17.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-1": "^6.16.0",
    "babel-register": "^6.18.0",
    "babel-runtime": "^6.18.0",
    "chai": "^3.5.0",
    "copy": "^0.3.0",
    "coveralls": "^2.11.15",
    "eslint": "^3.11.1",
    "eslint-plugin-flowtype": "^2.30.4",
    "eslint-watch": "^3.0.0",
    "flow-bin": "^0.41.0",
    "flow-watch": "^1.1.0",
    "husky": "^0.13.0",
    "istanbul": "^0.4.5",
    "mindfront-redux-utils": "^1.2.0",
    "mocha": "^3.2.0",
    "nyc": "^10.0.0",
    "redux": "^3.6.0",
    "rimraf": "^2.5.4",
    "semantic-release": "^6.3.2",
    "sinon": "^1.17.6",
    "validate-commit-msg": "^2.8.2"
  },
  "dependencies": {
    "lodash.mapvalues": "^4.6.0",
    "reselect": "^2.5.4"
  }
}
